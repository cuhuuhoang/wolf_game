<div class="header">Đăng nhập</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="body bg-gray">
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.text_field :username, autofocus: true, :placeholder => "Tên đăng nhập", :class => "form-control"%>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autofocus: true, :placeholder => "Mật khẩu", :class => "form-control", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %> Duy trì đăng nhập
        </div>
    <% end -%>


    <div class="actions">
      <%= f.submit "Đăng nhập", :class => "btn bg-olive btn-block" %>
    </div>
    <div class="footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>


